[core]
    compression = 9
	excludesFile = /Users/jongretar/.config/git/ignore

[user]
	name = Jon Gretar Borgthorsson
	email = jongretar@jongretar.com

[init]
	defaultBranch = main

[status]
    branch = true
    short = true
    showStash = true

[credential]
	helper = /usr/local/bin/git-credential-manager

[credential "https://dev.azure.com"]
	useHttpPath = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true


