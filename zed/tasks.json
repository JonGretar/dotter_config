// Static tasks configuration.
//
// Example:
[
  {
    "label": "LazyGit",
    "command": "lazygit",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system"
  },
  {
    "label": "Posting",
    "command": "posting",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system"
  },
  {
    "label": "Aider (OpenAI: o3-mini)",
    "command": "aider --watch-files --model o3-mini",
    "reveal": "always",
    "use_new_terminal": false,
    "allow_concurrent_runs": false
  },
  {
    "label": "Preview in Skim",
    "command": "skim-preview '$ZED_FILE'",
    "reveal": "never",
    "hide": "on_success"
  },
  {
    "label": "file_finder",
    "command": "zed \"$(tv files)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Quarto Render",
    "command": "quarto render '$ZED_FILE'",
    "tags": ["quarto"],
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Quarto Preview",
    "command": "quarto preview '$ZED_FILE'",
    "tags": ["quarto"],
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Start R terminal",
    "command": "radian",
    "tags": ["r"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true
  },
  {
    "label": "Marimo: Run file",
    "command": "marimo run --watch  '$ZED_FILE'",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Marimo: Edit file",
    "command": "marimo edit --watch  '$ZED_FILE'",
    "reveal": "always",
    "hide": "on_success"
  }
]
