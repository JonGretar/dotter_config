// Static tasks configuration.
//
// Example:
[
  {
    "label": "LazyGit",
    "command": "lazygit",
    "use_new_terminal": false,
    "reveal_target": "center",
    "allow_concurrent_runs": false,
    "env": {
      "EDITOR": "zed -w",
      "VISUAL": "zed -w"
    },
    "reveal": "always",
    "hide": "on_success",
    "shell": "system"
  },
  {
    "label": "JJUI",
    "command": "jjui",
    "use_new_terminal": false,
    "reveal_target": "center",
    "allow_concurrent_runs": false,
    "env": {
      "EDITOR": "zed -w",
      "VISUAL": "zed -w"
    },
    "reveal": "always",
    "hide": "on_success",
    "shell": "system"
  },
  {
    "label": "LazyJJ",
    "command": "lazyjj",
    "use_new_terminal": false,
    "reveal_target": "center",
    "allow_concurrent_runs": false,
    "env": {
      "EDITOR": "zed -w",
      "VISUAL": "zed -w"
    },
    "reveal": "always",
    "hide": "on_success",
    "shell": "system"
  },
  {
    "label": "Preview in Skim",
    "command": "skim-preview '$ZED_FILE'",
    "reveal": "never",
    "hide": "on_success"
  },
  {
    "label": "file_finder",
    "command": "zed \"$(tv files)\"",
    "hide": "always",
    "reveal_target": "center",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "project_finder",
    "command": "zed \"$(tv git-projects)\"",
    "hide": "always",
    "reveal_target": "center",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "text_finder",
    "command": "zed \"$(tv text)\"",
    "hide": "always",
    "reveal_target": "center",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Quarto Render",
    "command": "quarto render '$ZED_FILE'",
    "tags": ["quarto"],
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Quarto Preview",
    "command": "quarto preview '$ZED_FILE'",
    "tags": ["quarto"],
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Start R terminal",
    "command": "radian",
    "tags": ["r"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "use_new_terminal": true
  },
  {
    "label": "Marimo: Run file",
    "command": "marimo run --watch  '$ZED_FILE'",
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Marimo: Edit file",
    "command": "marimo edit --watch  '$ZED_FILE'",
    "reveal": "always",
    "hide": "on_success"
  }
]
